{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": false,
		"outDir": "build",
		"target": "ES2020",
		"declaration": true,
		"strict": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": [
		"src/**/*"
	]
}
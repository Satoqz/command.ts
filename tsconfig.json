{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": false,
		"outDir": "build",
		"target": "ES2019",
		"strict": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"paths": {
			"*": ["node_modules/*"]
		},
		"newLine": "lf"
	},
	"include": [
		"src/**/*"
	]
}